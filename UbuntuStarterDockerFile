# Get the ubuntu base image
FROM ubuntu

MAINTAINER Snehasish Sen <sen.snehasish02@gmail.com>

ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update

# install tools
RUN apt-get install -y git vim libc6-dbg gdb ctags

# Setup vim
RUN git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim

# Setup my configurations
RUN git clone https://github.com/snehasish02/Utils.git /home/ && \
    cd /home/ && \
    ln -sf /home/Utils/vim/.vimrc .vimrc && \
    mkdir -p .vim/ftdetect && \
    for file in $(ls vim/ftdetect/*); do ln -sf $file ".vim/ftdetect/"$(basename $file); done && \
    ln -sf /home/Utils/.gdbinit .gdbinit && \
    ln -sf /home/Utils/.ctags .ctags
